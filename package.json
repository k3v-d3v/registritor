{
  "name": "@k3v-d3v/monorepo",
  "version": "0.0.0",
  "description": "Introspect packages in the NPM registry",
  "scripts": {
    "prepare": "husky",
    "version": "lerna version --no-private --conventional-commits --create-release github --loglevel silly",
    "publish": "lerna publish from-git --no-private --dist-tag latest --loglevel verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k3v-d3v/registritor.git"
  },
  "keywords": [
    "npm",
    "registry",
    "introspect",
    "packages",
    "audit"
  ],
  "author": "k3v-d3v",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/k3v-d3v/registritor/issues"
  },
  "homepage": "https://github.com/k3v-d3v/registritor#readme",
  "devDependencies": {
    "@types/node": "22.13.1",
    "husky": "9.1.7",
    "lerna": "8.1.9",
    "tsup": "8.3.6",
    "typescript": "5.7.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.4"
}
